ln -s ~/bin/dotvim ~/.vim

rm -f ~/.vimrc
ln -s ~/bin/dotvim/vimrc ~/.vimrc

rm -f ~/.gvimrc
ln -s ~/bin/dotvim/gvimrc ~/.gvimrc
