#!/bin/sh
# Assumes this all lives in ~/bin/dotvim 

# -- Compiling vim --
# cd ~/code
# git clone git://github.com/b4winckler/vim.git
# cd vim
# git checkout -b vim73 origin/hg/vim73
# cd src
# ./configure --with-features=huge --enable-rubyinterp --enable-pythoninterp --enable-perlinterp --enable-cscope --with-global-runtime=/usr/local/share/vim/vim73
